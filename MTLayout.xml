<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Constant name="InputColumnLeftMarginGap" val="30"/>
    <Constant name="InputColumnRightMarginGap" val="-90"/>
    <Constant name="InputSliderValueGap" val="10"/>
    <Constant name="InputCheckBoxVerticalGap" val="10"/>

<!--
 Templates
  -->
    <Frame type="Slider" name="MTSliderTemplate" template="StandardTemplates/StandardSliderTemplate">
        <Continuous val="true"/>
    </Frame>
    
    <Frame type="Label" name="MTHeaderLabelTemplate">
        <Style val="@@MTHeaderPanel"/>
    </Frame>

    <Frame type="Label" name="MTLabelTemplate">
        <Style val="@@OptionsLabel"/>
    </Frame>
    

    <!-- 
        Template Panels
    -->    

    <Frame type="Frame" name="MTDifficultyButton">                
        <Anchor side="Left" relative="$parent" pos="Min" offset="0" />
        <Anchor side="Right" relative="$parent" pos="Max" offset="0" />
        <Height val="90"/>

        <Frame type="Button" name="DialogButton" template="StandardBattlenetTemplates/BattlenetStandardMediumButtonTemplate">            
            <Anchor side="Left" relative="$parent" pos="Min" offset="10"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>                        
        </Frame>   

        <Frame type="Label" name="DialogLabel" template="MTLayout/MTLabelTemplate">
            <Anchor side="Left" relative="$parent/DialogButton" pos="Max" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>  
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>   
            <Style val="MTLabel"/>                     
        </Frame> 
    </Frame>

    <Frame type="Frame" name="MTDifficultyCheckbox">                
        <Anchor side="Left" relative="$parent" pos="Min" offset="0" />
        <Anchor side="Right" relative="$parent" pos="Max" offset="0" />
        <Height val="90"/>

        <Frame type="CheckBox" name="DialogCheckBox" template="StandardTemplates/StandardCheckBoxTemplate"> 
            <Anchor side="Left" relative="$parent" pos="Min" offset="20"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Width val="25"/>
            <Height val="25"/>
        </Frame>  

        <Frame type="Label" name="DialogLabel" >
            <Anchor side="Left" relative="$parent/DialogCheckbox" pos="Max" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>  
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>  
            <Style val="MTLabel"/>                      
        </Frame> 
    </Frame>



    <Frame type="Frame" name="MTConfigButtonPanel">                
        <Anchor side="Left" relative="$parent" pos="Min" offset="0" />
        <Anchor side="Right" relative="$parent" pos="Max" offset="0" />
        <Height val="63"/>

        <Frame type="Image" name="Thumbnail">
            <Texture val="Assets/Textures/btn-unit-terran-marine.dds"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Width val="63"/>
            <Height val="63"/>
        </Frame>

        <Frame type="Button" name="ConfigButton" template="StandardBattlenetTemplates/BattlenetStandardMediumButtonTemplate">            
            <Anchor side="Left" relative="$parent/Thumbnail" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>                        
        </Frame>

        <Frame type="CheckBox" name="ConfigCheckbox" template="StandardTemplates/StandardCheckBoxTemplate"> 
            <Anchor side="Left" relative="$parent/ConfigButton" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Mid" offset="-12"/>
            <Width val="25"/>
            <Height val="25"/>
        </Frame>
    </Frame>


    <Frame type="Frame" name="MTDropdownPanelTemplate">       
        <Anchor side="Left" relative="$parent" pos="Min" offset="10"/>
        <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>

        <Frame type="Label" name="MTNameLabel" template="MTLayout/MTLabelTemplate">
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>                
        </Frame> 

        <Frame type="Pulldown" name="MTPulldown" template="StandardTemplates/StandardPulldownTemplate">
            <Anchor side="Top" relative="$parent/MTNameLabel" pos="Max" offset="3"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        </Frame>
    </Frame>


    <Frame type="Frame" name="MTSliderPanelTemplate">            
        <Anchor side="Left" relative="$parent" pos="Min" offset="10"/>
        <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>

        <Frame type="Label" name="MTNameLabel" template="MTLayout/MTLabelTemplate">
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>                
        </Frame>
        
        <Frame type="Slider" name="MTSlider" template="MTLayout/MTSliderTemplate">
            <Anchor side="Top" relative="$parent/MTNameLabel" pos="Max" offset="3"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="#InputColumnLeftMarginGap"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="#InputColumnRightMarginGap"/>
            <MinValue val="0"/>
            <MaxValue val="100.000000"/>
        </Frame>

        <Frame type="Label" name="MTValueLabel" template="MTLayout/MTLabelTemplate">
            <Anchor side="Top" relative="$parent/MTSlider" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/MTSlider" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/MTSlider" pos="Max" offset="#InputSliderValueGap"/>
        </Frame>                  
    </Frame>

    <Frame type="Frame" name="MTTitlePanelTemplate">          
        <Anchor side="Top" relative="$parent" pos="Min" offset="10"/>  
        <Anchor side="Left" relative="$parent" pos="Min" offset="10"/>
        <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>
        <Height val="120"/>

        <Frame type="Label" name="MTTitleLabel" template="MTLayout/MTHeaderLabelTemplate">
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>  
            <Height val="40"/>
        </Frame>

        <Frame type="Label" name="MTDescriptionLabel">
            <Anchor side="Left" relative="$parent" pos="Min" offset="10"/>
            <Anchor side="Top" relative="$parent/MTTitleLabel" pos="Max" offset="0"/> 
            <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>             
            <Style val="@@MTLabel"/>
        </Frame>
    </Frame>

    <!-- Frame Panel for configuration details -->
    <Frame type="Frame" name="MTPanelTemplate">
        <Anchor relative="$parent"/>

        <Visible val="False"/>        
    </Frame>

    <Frame type="Frame" name="BackgroundFrame">

        <Frame type="Image" name="OuterBackground" template="StandardTemplates/StandardOuterBorderTemplate">
            <Anchor relative="$parent"/>
        </Frame>
    </Frame>


<!-- Difficulty Dialog -->
<Frame type="Frame" name="DifficultyDialog" template="MTLayout/BackgroundFrame">
    <Anchor relative="$parent"/>
    <!-- Title -->
    <Frame type="Label" name="Title">
        <Anchor side="Top" relative="$parent" pos="Min" offset="0" />
        <Anchor side="Left" relative="$parent" pos="Min" offset="0" />
        <Anchor side="Right" relative="$parent" pos="Max" offset="0" />
        <Height val="50"/>
        <Style val="ABChoiceButtonText"/>
        <Text val="Select Difficulty:"/>
    </Frame>
    <!-- Easy -->
    <Frame type="Frame" name="EasyButtonPanel" template="MTLayout/MTDifficultyButton">
        <Anchor side="Top" relative="$parent/Title" pos="Max" offset="10" />
        <Frame type="Button" name="DialogButton">
            <Text val="Easy"/>
        </Frame>
        <Frame type="Label" name="DialogLabel">
            <Text val="Ling speed is slow | Attack Waves are weak and delayed and limited | Drops are delayed | Enemy upgrades are minimal | No Executor"/>
        </Frame>
    </Frame>
    <!-- Medium  -->
    <Frame type="Frame" name="MediumButtonPanel" template="MTLayout/MTDifficultyButton">
        <Anchor side="Top" relative="$parent/EasyButtonPanel" pos="Max" offset="10" />
        <Frame type="Button" name="DialogButton">
            <Text val="Medium"/>
        </Frame>
        <Frame type="Label" name="DialogLabel">
            <Text val="Ling speed is challenging | Attack Waves are normal, limited still | Drops are come sooner | Enemy upgrades are Gold Level | Executor respawns oftenr"/>
        </Frame>
    </Frame>    
    <!-- Hard -->
    <Frame type="Frame" name="HardButtonPanel" template="MTLayout/MTDifficultyButton">
        <Anchor side="Top" relative="$parent/MediumButtonPanel" pos="Max" offset="10" />
        <Frame type="Button" name="DialogButton">
            <Text val="Hard"/>
        </Frame>
        <Frame type="Label" name="DialogLabel">
            <Text val="Ling speed is fast | Attack Waves are equal to your army supply | Drops come fast and often | Enemy upgrades are maximal of masters level (does not exceed 2/2)| Executor respawns quickly"/>
        </Frame>        
    </Frame>
    <!-- Custom -->
    <Frame type="Frame" name="CustomButtonPanel">                
        <Anchor side="Top" relative="$parent/HardButtonPanel" pos="Max" offset="10" />
        <Anchor side="Left" relative="$parent" pos="Min" offset="0" />
        <Anchor side="Right" relative="$parent" pos="Max" offset="0" />
        <Height val="60"/>

        <Frame type="Button" name="CustomDialogButton" template="StandardBattlenetTemplates/BattlenetStandardMediumButtonTemplate">            
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/> 
            <Text val="Custom"/>                       
        </Frame>   

        <Frame type="Button" name="CustomizeDialogButton" template="StandardBattlenetTemplates/BattlenetStandardMediumButtonTemplate">            
            <Anchor side="Left" relative="$parent/CustomDialogButton" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>  
            <Text val="Customize"/>
        </Frame>
    </Frame>
    <!-- Warning Dialog checkbox -->
    <Frame type="Frame" name="WarningCheckboxPanel" template="MTLayout/MTDifficultyCheckbox">
        <Anchor side="Top" relative="$parent/CustomButtonPanel" pos="Max" offset="10" />
        <Frame type="CheckBox" name="DialogCheckBox"/>                    
        <Frame type="Label" name="DialogLabel">
            <Text val="show warning messages"/>
        </Frame>        
    </Frame>
    <!-- Tutorial Dialog checkbox -->
    <Frame type="Frame" name="TutorialCheckboxPanel" template="MTLayout/MTDifficultyCheckbox">
        <Anchor side="Top" relative="$parent/WarningCheckboxPanel" pos="Max" offset="10" />
        <Frame type="CheckBox" name="DialogCheckBox"/>                    
        <Frame type="Label" name="DialogLabel">
            <Text val="display tutorials"/>
        </Frame>        
    </Frame>


</Frame>


<!-- Master Frame -->

<Frame type="Frame" name="MasterPanel">
        <Anchor relative="$parent"/>

        
        <!-- LEFT SIDE  -->

        <Frame type="Frame" name="LeftFrame" template="MTLayout/BackgroundFrame">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>        
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Width val="310"/>

            <Frame type="Image" name="OuterBackground" template="StandardTemplates/StandardOuterBorderTemplate">
                <Anchor relative="$parent"/>
            </Frame>

            <Frame type="Frame" name="AttackConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent" pos="Min" offset="10"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Attack Wave"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="CreepConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/AttackConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Creep"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="EnergyConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/CreepConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Energy"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="ExecutorConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/EnergyConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Executor"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="MineralConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/ExecutorConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Minieral"/>
                </Frame>
            </Frame>
            
            <Frame type="Frame" name="MinimapConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/MineralConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Minimap"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="OverqueueConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/MinimapConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Overqueue"/>
                </Frame>
            </Frame>            

            <Frame type="Frame" name="ProbeConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/OverqueueConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Probe"/>
                </Frame>
            </Frame>            

            <Frame type="Frame" name="QueenConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/ProbeConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Queen"/>
                </Frame>
            </Frame>
                
            <Frame type="Frame" name="SupplyCapConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/QueenConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Supply"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="TerranConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/SupplyCapConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Terran"/>
                </Frame>
            </Frame>

            <Frame type="Frame" name="WorkerConfigButtonPanel" template="MTLayout/MTConfigButtonPanel">
                <Anchor side="Top" relative="$parent/TerranConfigButtonPanel" pos="Max" offset="0"/>
                <Frame type="Button" name="ConfigButton">
                    <Text val="Worker"/>
                </Frame>
            </Frame>


            <Frame type="Button" name="BackButton" template="StandardBattlenetTemplates/BattlenetStandardBackButtonTemplate">
                
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="-10"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            </Frame>

            <Frame type="Button" name="SaveButton" template="StandardBattlenetTemplates/BattlenetStandardMediumButtonTemplate">
                <Text val="Save"/>
                <Anchor side="Top" relative="$parent/BackButton" pos="Min" offset="0"/>
                <Anchor side="Left" relative="$parent/BackButton" pos="Max" offset="4"/>
            </Frame>


        </Frame>




<!-- RIGHT SIDE Frame Panel for Configuration Buttons -->

        <Frame type="Frame" name="RightFrame" template="MTLayout/BackgroundFrame">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/LeftFrame" pos="Max" offset="0"/>        
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>     

            <!-- PROBE -->
            <Frame type="Frame" name="MTProbePanel" template="MTLayout/MTPanelTemplate"> 

                <Frame type="Frame" name="TitlePanel" template="MTLayout/MTTitlePanelTemplate">                     
                    <Frame type="Label" name="MTTitleLabel">
                        <Text val="Probe"/>
                    </Frame>
                    <Frame type="Label" name="MTDescriptionLabel">
                        <Text val=
"The probe challenge is to ensure that you are constantly moving a 
'unit' around while attempting to maintain a strong macro based economy. The 
probe cannot die."
                            />
                    </Frame>
                </Frame>
                
                <Frame type="Frame" name="ZergSpeedPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/TitlePanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Zerg speed relative to probe"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="25"/>
                        <MaxValue val="100"/>
                    </Frame>
                </Frame>

                <Frame type="Frame" name="ProbeWaypointPanel" template="MTLayout/MTDropdownPanelTemplate">
                    <Anchor side="Top" relative="$parent/ZergSpeedPanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Waypoint control for probe"/>
                    </Frame>

                </Frame>
                
            </Frame>

        <!-- MINERALS -->
            <Frame type="Frame" name="MTMineralPanel" template="MTLayout/MTPanelTemplate">        
                <Frame type="Frame" name="TitlePanel" template="MTLayout/MTTitlePanelTemplate">                     
                    <Frame type="Label" name="MTTitleLabel">
                        <Text val="Minerals"/>
                    </Frame>
                    <Frame type="Label" name="MTDescriptionLabel">
                        <Text val=
"Mineral challenge is to keep your minerals under the specified 
ammount while maintaining the rest of the challenge"
                            />
                    </Frame>
                </Frame>

                <Frame type="Frame" name="MineralPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/TitlePanel" pos="Max" offset="10"/>
                    <Height val="100"/>

                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Maximum amount of minerals"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="400"/>
                        <MaxValue val="2000"/>
                    </Frame>                    
                </Frame>        
            </Frame>

        <!-- DROPS -->
            <Frame type="Frame" name="MTMinimapDropsPanel" template="MTLayout/MTPanelTemplate"> 
                <Frame type="Frame" name="TitlePanel" template="MTLayout/MTTitlePanelTemplate">                     
                    <Frame type="Label" name="MTTitleLabel">
                        <Text val="Minimap"/>
                    </Frame>
                    <Frame type="Label" name="MTDescriptionLabel">
                        <Text val=
"The minimap challenge is to select the incoming dropship with your 
cursor before the drop has completed. "
                            />
                    </Frame>
                </Frame>       

                <Frame type="Frame" name="StartTimePanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/TitlePanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Initial time drops start appearing"/>
                    </Frame>

                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="0"/>
                        <MaxValue val="480"/>
                    </Frame>
                </Frame>   

                <Frame type="Frame" name="FrequencyPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/StartTimePanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Frequency of drops"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="10"/>
                        <MaxValue val="180"/>
                    </Frame>
                </Frame>        

                <Frame type="Frame" name="MaxDropSupplyPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/FrequencyPanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Maximum drop supply unloading from enemy drops"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <Continuous val="false"/>
                        <MinValue val="0"/>
                        <MaxValue val="8"/>
                    </Frame>
                </Frame>

                <Frame type="Frame" name="MinArmySupplyPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/MaxDropSupplyPanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Minimum Army supply you have before drop can commence "/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="0"/>
                        <MaxValue val="50"/>
                    </Frame>
                </Frame>

            </Frame>

            <!-- Executor -->
            <Frame type="Frame" name="ExecutorPanel" template="MTLayout/MTPanelTemplate">        
                <Frame type="Frame" name="TitlePanel" template="MTLayout/MTTitlePanelTemplate">                     
                    <Frame type="Label" name="MTTitleLabel">
                        <Text val="Executor"/>
                    </Frame>
                    <Frame type="Label" name="MTDescriptionLabel">
                        <Text val=
"When drop capability is detected by the player, ie. Medivacs/Warp 
prison created or Overlord Sacs have been researched, the executor is 
to be rescued as soon as it pops up on the right hand side of the map."
                            />
                    </Frame>
                </Frame>

                <Frame type="Frame" name="Frequency" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/TitlePanel" pos="Max" offset="10"/>
                    <Height val="100"/>

                    <Frame type="Label" name="MTNameLabel">
                        <Text val="The frequency at which the Executor will respawn after being saved"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="0"/>
                        <MaxValue val="120"/>
                    </Frame>                    
                </Frame>        

                <Frame type="Frame" name="IdleTimePanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/Frequency" pos="Max" offset="10"/>
                    <Height val="100"/>

                    <Frame type="Label" name="MTNameLabel">
                        <Text val="The amount of time the Executor is allowed to idle before being saved before time is deducted"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="10"/>
                        <MaxValue val="120"/>
                    </Frame>                    
                </Frame>
            </Frame>

            <!-- Attack Waves -->
            <Frame type="Frame" name="AttackWavePanel" template="MTLayout/MTPanelTemplate">        
                <Frame type="Frame" name="TitlePanel" template="MTLayout/MTTitlePanelTemplate">                     
                    <Frame type="Label" name="MTTitleLabel">
                        <Text val="Attack Wave"/>
                    </Frame>
                    <Frame type="Label" name="MTDescriptionLabel">
                        <Text val=
"Attack Waves come at the estimated time specified at the estimated frequency. There is a bit of
randomness added to the timing when they are executed. They appear and are created at a ratio to 
the player's army ratio. To stop the attack waves from coming forever, the player must destroy the 
statue in the middle of the map. The statue will go invulnerable when its health has been damaged and
trigger another attack wave."
                            />
                    </Frame>
                </Frame>

                <Frame type="Frame" name="StartTimePanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/TitlePanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="First attack wave appears at"/>
                    </Frame>

                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="120"/>
                        <MaxValue val="600"/>
                    </Frame>
                </Frame>  

                <Frame type="Frame" name="FrequencyPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/StartTimePanel" pos="Max" offset="10"/>
                    <Height val="100"/>

                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Frequency between attack waves that are not triggered by attacking the statue"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="60"/>
                        <MaxValue val="360"/>
                    </Frame>                    
                </Frame>        

                <Frame type="Frame" name="StatueCountPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/FrequencyPanel" pos="Max" offset="10"/>
                    <Height val="100"/>
                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Number of times the statue will go invulnerable and send an attack wave before it can be destroyed"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <Continuous val="false"/>
                        <MinValue val="0"/>
                        <MaxValue val="10"/>
                    </Frame>
                </Frame>

                <Frame type="Frame" name="StatueLifePanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/StatueCountPanel" pos="Max" offset="10"/>
                    <Height val="100"/>

                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Maximum life of statue"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="100"/>
                        <MaxValue val="30000"/>
                    </Frame>                    
                </Frame>

                <Frame type="Frame" name="ArmyRatioPanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/StatueLifePanel" pos="Max" offset="10"/>
                    <Height val="100"/>

                    <Frame type="Label" name="MTNameLabel">
                        <Text val="Enemy army ratio to player's army size"/>
                    </Frame>
                    <Frame type="Slider" name="MTSlider">
                        <MinValue val="25"/>
                        <MaxValue val="150"/>
                    </Frame>                    
                </Frame>
            </Frame>

            <!-- Creep -->
            <Frame type="Frame" name="CreepPanel" template="MTLayout/MTPanelTemplate">        
                <Frame type="Frame" name="TitlePanel" template="MTLayout/MTTitlePanelTemplate">                     
                    <Frame type="Label" name="MTTitleLabel">
                        <Text val="Creep"/>
                    </Frame>
                    <Frame type="Label" name="MTDescriptionLabel">
                        <Text val=
"Creep challenge is to always be moving the creep along. Configurable idle time 
is calculated to lessen the constraint of always moving the tumor everytime it appears."
                            />
                    </Frame>
                </Frame>
                <Frame type="Frame" name="AllowedIdleTimePanel" template="MTLayout/MTSliderPanelTemplate">
                    <Anchor side="Top" relative="$parent/TitlePanel" pos="Max" offset="10"/>
                    <Height val="100"/>

